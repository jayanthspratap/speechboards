               <VBox.margin>
                  <Insets left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Label>
            <ProgressBar fx:id="progressBar" prefHeight="23.0" prefWidth="417.0" progress="0.0" style="-fx-background-color: #42a8d7;" visible="false">
